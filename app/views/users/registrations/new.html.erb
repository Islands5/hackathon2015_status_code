<div class="col-md-4 col-md-offset-4 sign-up-background">


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-style"}) do |f| %>
  <%= devise_error_messages! %>

  <h2>登録</h2>
  <div class="field form-group">
    <%= f.label :"名前" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :"メールアドレス" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.email_field :email %>
  </div>

  <div class="field form-group">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字)</em>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <% end %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :"確認用" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :"独身ですか?" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;はい<%= f.radio_button 'single', 'true', {} %>&nbsp;&nbsp;&nbsp;&nbsp;
    いいえ<%= f.radio_button 'single', 'false', {} %>
  </div>

  <hr>

  <div class="field form-group">
    <%= f.label :"奥様の名前" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :wife_name %>
  </div>

  <div class="field form-group">
    <%= f.label :"奥様のメルアド"  %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.email_field :wife_email %>
  </div>

  <hr>

  <div class="field form-group">
    <%= f.label :"結婚記念日" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.date_field :wedding_day %>
  </div>
  <div class="actions btn">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
